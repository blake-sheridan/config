[alias]
a = add -p
ad = add
am = commit --amend
c = checkout -p
cf = config
cfl = config --list
ci = commit
co = checkout
d = diff
ds = diff --staged
l = log
lf = log --follow
lp = log -p
p = push
pr = push --recurse-submodules=on-demand
r = reset HEAD --
rb = rebase --interactive
rba = rebase --abort
rbc = rebase --continue
rbs = rebase --skip
s = status
sh = show

[clean]
requireForce = false

[color]
status = always

[core]
editor = emacs -nw

[diff]
algorithm = minimal
#ignoreSubmodules = dirty
mnemonicprefix = true
renames = true

[log]
abbrevCommit = true

[push]
default = simple

[rebase]
autosquash = true
stat = true

