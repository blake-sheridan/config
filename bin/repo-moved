#!/bin/bash

root="$( cd "$( dirname "${BASH_SOURCE[0]}" )"/.. >/dev/null 2>&1 && pwd )"

# .emacs.d/
rm ~/.emacs.d
ln -s $root/etc/emacs.d ~/.emacs.d

# .gitconfig
ln -fs $root/etc/gitconfig ~/.gitconfig

# .zshenv
ln -fs $root/etc/zshenv ~/.zshenv

# .zshrc
ln -fs $root/etc/zshrc ~/.zshrc

# ~/bin
rm ~/bin
ln -s $root/bin ~/bin

# ~/etc
rm ~/etc
ln -s $root/etc ~/etc

# ~/src
rm ~/src
ln -s $root/src ~/src
